<!DOCTYPE html>
<html>
  <head>
    <title>Ennui</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="_container ">
  <% if current_user %>
    <nav class="user_nav">
            <div class="user_link">
                <%= link_to "Listing", '/' ,class:"listing link"%>
                <%= link_to "New product",new_product_path , class:"product link"%>
                <%= link_to "Messages",messages_path, class:"messages link"%>
            </div>

            <div class="admin">
            <div>
              <% if current_user.admin == true %>
                <div class="">
                    <%= link_to "Admin", rails_admin_path, class:"link"%>
                </div>
              <% end %>
            </div>
            
            <div class="user_logout">
                <%= link_to "Logout",destroy_user_session_path ,method: :delete , class:"logout link"%>
            </div>
            </div>
            
            
    </nav>
   
  <% end %>
  <% if flash[:notice] %>
    <div class="notice"><%= notice %></div>
  <% end %>
  <% if flash[:alert] %>
    <div class="alert"><%= alert %></div>  
  <% end %>
    

    <%= yield %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.3/gsap.min.js"></script>
    <script>
      var tl = gsap.timeline({defaults: {duration: 1.8, opacity: 3}});
      tl.to(".absence",{y: 70, ease: "elastic.out(1,0.1)"});
    </script>
  </body>
</html>
